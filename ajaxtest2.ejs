<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <script
            src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"
        >
            // w3school > jquery > get started > CDN
        </script>
    </head>
    <body>
        <form action="">
            x : <input type="text" name="x" id="x" /><br />
            y : <input type="text" name="y" id="y" /><br />

            result : <input type="text" name="result" id="result" /><br />

            <button type="button" id="btnAdd">더하기</button>
        </form>
    </body>
</html>
<script>
    $(document).ready(() => {
        $("#btnAdd").click(() => {
            //비동기모드 : 반환값 못씀
            $.ajax({
                url: "/ajax/add", //
                data: { x: $("#x").val(), y: $("#y").val() }, //JSON형태
                dataType: "json", //결과를 JSON형식으로 가져오곘다
            })
                .done((res, status, error) => {
                    console.log(res);
                    $("#result").val(res.result);
                })
                .fail((res, status, error) => {
                    console.log(status);
                });
            ////////////
            //기본구조
            // .done((res, status, error) => {
            //     console.log(res);
            // })
            // .fail((res, status, error) => {
            //     console.log(status);
            // });
        });
    });
</script>
